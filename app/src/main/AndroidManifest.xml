<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xun.soda">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SodaSampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SodaRecyclerDiyAdapterActivity"/>
        <activity android:name=".SodaRecyclerSimpleAdapterActivity"/>
        <activity android:name=".SodaRecyclerBaseAdapterActivity"/>
        <activity android:name=".SodaRecyclerViewActivity" />
        <activity android:name=".SodaBannerSampleActivity" />
        <activity android:name=".SodaRefreshSampleActivity" />
        <activity android:name=".SodaTabTopSampleActivity" />
        <activity android:name=".SodaTabBottomSampleActivity" />
        <activity android:name=".SodaLogSampleActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>